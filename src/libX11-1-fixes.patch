Subject: [PATCH 1/2] Append $(EXEEXT) to call of compiled tool.


diff --git a/src/Makefile.am b/src/Makefile.am
index 71e02e7..7200c83 100644
--- a/src/Makefile.am
+++ b/src/Makefile.am
@@ -416,7 +416,7 @@ endif MAKE_LINT_LIB
 KEYSYMDEFS=@KEYSYMDEFS@
 
 ks_tables.h: $(KEYSYMDEFS) $(top_builddir)/src/util/makekeys$(EXEEXT)
